<!DOCTYPE html>
<html>
  <head>
    <title>Devbuddy</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <div class="wrapper">
      <%= render "shared/navbar" %>
      <%= yield %>
      <%= render 'shared/footer' %>
    </div>

    <% if alert %>
      <div data-controller="flash" class="alert alert-danger" data-flash-target="message"><%= alert %></div>
    <% end %>

    <% if notice %>
      <div data-controller="flash" class="alert alert-success" data-flash-target="message"><%= notice %></div>
    <% end %>

    <% if flash[:warning] %>
      <div data-controller="flash" class="alert alert-warning" data-flash-target="message"><%= flash[:warning] %></div>
    <% end %>
  </body>
</html>
